{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
      "./types",
      "node",
      "@wdio/globals/types",
      "expect-webdriverio",
      "@wdio/cucumber-framework",
      "@wdio/appium-service"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "support/**/*.ts",
    "step_definitions/**/*.ts",
    "types/**/*.d.ts",
    "features/**/*.ts"
  ]
}
